<%= form_tag action: "preview" do %>
    <%= text_field :add_feed, :url %>
    <%= submit_tag "追加" %>
<% end %>

<% @rss.each do |rss| %>

    <%= rss.title.content %> <br />
    <%= rss.links[2].href %> <br />

    <br />

    <% rss.entries.each do |entry| %>
        <%= entry.title.content %> <br />
        <%= entry.links[4].href %> <br />
        <%= entry.published.content %> <br />
        <%== entry.content.content.lines[0] %> <br />
        <br />
    <% end %> 

<% end %>
